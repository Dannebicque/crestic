{% extends '::base-responsable.html.twig' %}

{% block breadcrumbs %}
	<a href="{{ path('responsable_plateformes_index') }}">Plateformes</a> / Détails
{% endblock %}

{% block content %}
    <h1>Détails d'une palteforme</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plateforme.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plateforme.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plateforme.description }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ plateforme.localisation }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if plateforme.created %}{{ plateforme.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if plateforme.updated %}{{ plateforme.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ plateforme.slug }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plateforme.image }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ plateforme.url }}</td>
            </tr>
        </tbody>
    </table>
	{{ include('@App/Responsable/footer-show.html.twig', {var: 'plateformes', obj:plateforme.id}) }}
{% endblock %}
