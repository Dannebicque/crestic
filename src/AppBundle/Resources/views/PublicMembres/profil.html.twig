{% block javascripts %}
    <script>
      $(document).ready(function () {
        recupereHal();
        var max_height = 0;
        $('#membresTabActivites a:first').tab('show');


        $('#membresTabActivites a').each(function () {
          var id_tab = $(this).attr('href');
          if (max_height < $(id_tab).height()) {
            max_height = $(id_tab).height();
          }
        });

        $("#membresTabDivActivites").height(max_height);

        $('.link-share').attr('data-link', '/fiche/membre/{{ user.slug }}');



      });

      function recupereHal() {
        //e.preventDefault();
        var $resultat = $('#result_hal');
        $.ajax({
          url: "https://api.archives-ouvertes.fr/search/?q={{ user.nom }}&wt=xml&indent=true",
          dataType: 'xml',
          success: function (data) {
            var $html = '<ul>';
            console.log(data);
            //var xmlDoc = $.parseXML( data );

            var $xml = $( data );
            console.log($xml);
            var $doc = $xml.find("doc");

            $doc.each(function(){
              var $url='';
              var $text='';

              $(this).find('str').each(function(){
                if ($(this).attr('name') === 'uri_s') {
                  $url = $(this).text();
                }
                if ($(this).attr('name') === 'label_s') {
                  $text = $(this).text();
                }
              });
              //https://hal.inria.fr/
              $html = $html + '<li>' + $text + '<a href="'+$url+'" target="_blank">Voir sur Hal</a></li>';
              //console.log($(this).childNodes('str'))
            });

            console.log('--------');
            $html = $html + '</ul>';
            $resultat.empty().append($html);
          }
        });
      }
    </script>
