{% extends "::base.html.twig" %}

{% block title %}{{ 'agenda.crestic'|trans }}{% endblock %}

{% block stylesheets %}
<style>
	.bl-jour
	{
		width:100%;
		font-size: 30px;
		font-weight: bold;
		text-align: center;
		vertical-align: middle;
		height: 70px;
	}
	.bl-footer
	{
		width:100%;
		font-size: 10px;
		background-color: #fafafa;
		padding: 5px;
	}
	.bl-annee
	{
		width:100%;
		font-size: 15px;
		text-align: center;
		vertical-align: middle;
		height: 20px;
	}
</style>

{% endblock %}
{% block content %}
	<div class="row">
		<div class="col-sm-12">
			<div class="heading mb20">
				<h2>
					{{ 'agenda.crestic'|trans }}
				</h2>
			</div>
			<div class="row">
			{% for evt in evenements %}
				<div class="col-sm-4">
					<div class="row">
						<div class="col-sm-4">
							<div class="bl-jour">{{ evt.datedebut|date('d/m') }}</div>
							<div class="bl-annee">{{ evt.datedebut|date('Y') }}</div>
						</div>
						<div class="col-sm-8">
                            <h3>{{ evt.titre }}</h3>
							<p>{{ evt.description|raw }}</p>
							<p class="bl-footer">{{ evt.lieu }}, du {{ evt.datedebut|date('d/m/Y') }}, {{ evt.heuredebut|date('H:i') }} au {{ evt.datefin|date('d/m/Y') }}, {{ evt.heurefin|date('H:i') }}</p>
						</div>
					</div>

				</div>
			{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
