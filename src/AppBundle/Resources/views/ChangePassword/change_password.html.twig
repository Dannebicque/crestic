{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<div class="content-40mg">
	<div class="container">
		<div class="row">
			<div class="col-sm-3">&nbsp;</div>
			<div class="col-sm-6">
				<div class="panel no-margin panel-default">
					<div class="panel-heading">{{ 'change_password.titre'|trans }}</div>
					<div class="panel-body">
				{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
				{{ form_widget(form) }}
				<div>
					<a href="{{ path('homepage_utilisateur') }}">Annuler</a>
					<input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-rw btn-primary" />

				</div>
				{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock content %}
