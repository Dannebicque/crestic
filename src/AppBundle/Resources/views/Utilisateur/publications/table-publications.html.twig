<table class="table">
	<tr>
		<th style="width:85%">Publication</th>
		<th></th>
	</tr>
	{% for publication in publications %}
		<tr id="ligne_{{ publication.id }}">
			<td>{{ publication.titre }}</td>
			<td>
				<a href="{{ path('utilisateur_publications_etape2', { 'id': publication.id }) }}" class="btn
                            btn-success" data-toggle="tooltip" data-placement="bottom" title="Modifier les auteurs, projets, Ã©quipes"><i class="fa fa-wrench"></i></a>
				<a href="{{ path('utilisateur_publication_show', { 'id': publication.id, type:type }) }}" class="btn
						btn-info " data-toggle="tooltip" data-placement="bottom"
				   title="Voir" target="_blank"><i class="fa fa-eye"></i> </a>
				<a href="{{ path('utilisateur_publication_edit', { 'id': publication.id , type:type}) }}" class="btn
                            btn-warning" data-toggle="tooltip" data-placement="bottom" title="Modifier
                             les informations de la publication"><i class="fa
                            fa-pencil"></i></a>
				<a href="{{ path('utilisateur_publication_switch', { 'id': publication.id , type:type}) }}" class="btn btn-danger" data-toggle="modal" data-placement="bottom" title="Modifier le type de publication"><i class="fa fa-exchange"></i></a>
				<a href="#modalSuppressionPublication" data-publication="{{ publication.id }}" data-type="{{ type }}" class="btn
                            btn-danger suppressionPublication" data-toggle="modal" data-placement="bottom" title="Supprimer la publication"><i class="fa
                            fa-times"></i></a>
			</td>
		</tr>
	{% endfor %}
</table>