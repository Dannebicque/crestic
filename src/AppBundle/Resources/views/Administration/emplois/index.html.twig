{% extends '::base-admin.html.twig' %}


{% block title %}
Offres d'emplois
{% endblock %}

{% block breadcrumbs %}
	Offres d'emplois /
{% endblock %}

{% block content %}
	<h1>Offres d'emplois publiées</h1>

	<table class="table">
		<thead>
		<tr>
			<th>Titre</th>
			<th>Début</th>
			<th>Durée</th>
			<th>Contact</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{% for emploi in emplois if emploi.pourvue == false %}
			<tr>
				<td>{{ emploi.titre }}</td>
				<td>{% if emploi.debut %}{{ emploi.debut|date('d/m/Y') }}{% endif %}</td>
				<td>{{ emploi.duree }}</td>
				<td>{{ emploi.contact.display }}</td>
				<td>
					<a href="{{ path('administration_emplois_show', { 'id': emploi.id }) }}" class="btn btn-info"
					   title="Voir"><i class="fa fa-eye"></i> </a>
					<a href="{{ path('administration_emplois_edit', { 'id': emploi.id }) }}" class="btn
                            btn-warning" title="Modifier"><i class="fa fa-pencil"></i></a>
					<a href="{{ path('administration_emplois_delete', { 'id': emploi.id }) }}" class="btn
                            btn-danger" title="Supprimer"><i class="fa fa-times"></i></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

			<a href="{{ path('administration_emplois_new') }}" class="btn btn-primary">Publier une offre</a>
<br><br>
	<h2>Offres d'emplois pourvues</h2>

	<table class="table">
		<thead>
		<tr>
			<th>Titre</th>
			<th>Début</th>
			<th>Durée</th>
			<th>Contact</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{% for emploi in emplois if emploi.pourvue == true %}
			<tr>
				<td>{{ emploi.titre }}</td>
				<td>{% if emploi.debut %}{{ emploi.debut|date('d/m/Y') }}{% endif %}</td>
				<td>{{ emploi.duree }}</td>
				<td>{{ emploi.contact.display }}</td>
				<td>
					<a href="{{ path('administration_emplois_show', { 'id': emploi.id }) }}" class="btn btn-info"
					   title="Voir"><i class="fa fa-eye"></i> </a>
					<a href="{{ path('administration_emplois_edit', { 'id': emploi.id }) }}" class="btn
                            btn-warning" title="Modifier"><i class="fa fa-pencil"></i></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
